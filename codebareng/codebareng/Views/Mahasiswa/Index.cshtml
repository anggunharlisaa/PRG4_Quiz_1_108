@model List<codebareng.Models.Mahasiswa>
@{
    ViewData["codebareng"] = "Master Mahasiswa";
    int no = 1;
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Master Mahasiswa</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }
                    <a class="btn btn-primary" asp-action="Create">Tambah Mahasiswa</a>
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Program Studi</th>
                                <th scope="col">Angkatan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mahasiswa in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@mahasiswa.nama</td>
                                    <td>@mahasiswa.prodi</td>
                                    <td>@mahasiswa.angkatan</td>
                                    <td>
                                        <button class="btn btn-sm btn-danger delete-button" data-id="@mahasiswa.id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <a asp-controller="Mahasiswa" asp-action="Edit" asp-route-id="@mahasiswa.id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>

                                        </a>
                                        <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@mahasiswa.id">
                                            <i class="fas fa-info-circle"></i>
                                        </button>

                                        <div class="modal fade" id="infoModal_@mahasiswa.id" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Informasi Mahasiswa</h5>
                                                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <strong>Id:</strong>@mahasiswa.id<br />
                                                        <strong>Nama:</strong>@mahasiswa.nama<br />
                                                        <strong>Program Studi:</strong>@mahasiswa.prodi<br />
                                                        <strong>Angkatan:</strong>@mahasiswa.angkatan<br />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</section>
