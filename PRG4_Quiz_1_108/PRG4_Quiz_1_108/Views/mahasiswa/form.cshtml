@model PRG4_Quiz_1_108.Models.Mahasiswa

@{
    ViewData["PRG4_Quiz_1_108"] = "Tambah Mahasiswa";
    
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Mahasiswa</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="nama" class="control-label">Nama</label>
                                <input asp-for="nama" class="form-control" />
                                <span asp-validation-for="nama" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="prodi" class="control-label">Program Studi</label>
                                <input asp-for="prodi" class="form-control" />
                                <span asp-validation-for="prodi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="angkatan" class="control-label">Angkatan</label>
                                <input asp-for="angkatan" class="form-control" />
                                <span asp-validation-for="angkatan" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

